<h1><%= @shelter.name %></h1>
<p>Address: <%= @shelter.full_address %></p>

<section id="stats">
  <h3>Statistics</h3>
  <p>Average Pet Age: <%= @shelter.average_pet_age.round(2) %></p>
  <p>Adoptable Pets: <%= @shelter.adoptable_pets.count %></p>
  <p>Adopted Pets: <%= @shelter.adopted_pets.count %></p>
</section>

<section id="action_required">
  <h3>Action Required</h3>
  <% @shelter.pending_pets.each do |pet| %>
    <p>
      <%= pet.name %>
      <% pet.pending_applications.each do |app| %>
        <%= link_to app.name, "/admin/applications/#{app.id}" %>
      <% end %>
    </p>
  <% end %>
</section>