<h3><%= @application.name %></h3>

<p>Address: <%= @application.full_address %></p>
<p>Description: <%= @application.description %></p>
<section id='application_pets'>
  <p>Pets applying for: </p>
  <% @pet_id_pairs.each do |pet| %>
    <p><%= link_to pet[1], "/pets/#{pet[0]}" %></p>
  <% end %>
</section>
<p>Status: <%= @application.status %></p>
<%= form_with url: "/applications/#{@application.id}?search=#{@search}", method: :get, local: true do |form| %>
  <%= form.label :search, "Add a Pet to this Application" %>
  <%= form.text_field :search %>
  <br>
  <%= form.submit "Search For Pet!" %>
<% end %>

<p><% @pet_searches.each do |pet| %>
  <%= link_to pet.name, "/pets/#{pet.id}" %> 
  <%= form_with url: "/applications/#{@application.id}", method: :patch, local: true do |form| %>
    <%= form.hidden_field :pet, value: pet.id %>
      <%= form.submit "Adopt #{pet.name}!" %>
    <% end %>
<% end %></p>



    